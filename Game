    }
    #log {
      margin-top: 30px;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
      background: #111;
      padding: 10px;
      border-radius: 10px;
      height: 150px;
      overflow-y: auto;
      text-align: left;
    }
    button {
      margin-top: 20px;
      padding: 10px 20px;
      font-size: 18px;
      cursor: pointer;
      background: #0f0;
      color: #000;
      border: none;
      border-radius: 5px;
    }
    button:disabled {
      background: #444;
      cursor: not-allowed;
    }
